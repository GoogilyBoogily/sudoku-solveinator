  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Program",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceFolder}\\src\\index.js"
    },
    {
      "name": "Run Unit Tests",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceRoot}//node_modules//.bin//tape",
      "args": [
        "\'test/unit/**/*.spec.js\'"
      ],
      "cwd": "${workspaceRoot}",
    }
  ]
}
